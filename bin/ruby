#!/bin/bash
set -eo pipefail

root="$( dirname "${BASH_SOURCE[0]}" )"/..
llvmir=$(mktemp -d)
runfile=$(mktemp)

cleanup() {
    rm -r "$llvmir" "$runfile"
}

trap cleanup EXIT

cd "$root"
bazel build @llvm_toolchain//:bin/ld main:sorbet 2> /dev/null
cd - > /dev/null

"$root/bazel-bin/main/sorbet" --silence-dev-message --no-error-count --typed=true --llvm-ir-folder "$llvmir" "$@"

echo "require '$root/test/preamble.rb';" > "$runfile"

for o in "$llvmir"/*.o; do
    bundle="${o%.rb}.bundle"
    "$root/bazel-sorbet_llvm/external/llvm_toolchain/bin/ld" -bundle -o "$bundle" "$o" -undefined dynamic_lookup -macosx_version_min 10.14 -lSystem
    echo "require '$bundle';" >> "$runfile"
done

ruby="/Users/$(whoami)/.rbenv/shims/ruby"
$ruby "$runfile"
