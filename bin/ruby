#!/bin/bash
set -eo pipefail

llvmir=$(mktemp -d)
runfile=$(mktemp)

cleanup() {
    rm -r "$llvmir" "$runfile"
}

trap cleanup EXIT

bazel build @llvm_toolchain//:bin/ld main:sorbet 2> /dev/null

bazel-bin/main/sorbet --silence-dev-message --no-error-count --typed=true --llvm-ir-folder "$llvmir" "$@"

echo "require './test/preamble.rb';" > "$runfile"

for o in "$llvmir"/*.o; do
    base=$(basename "$o")
    bundle="$llvmir/${base%.rb}.bundle"
    bazel-sorbet_llvm/external/llvm_toolchain/bin/ld -bundle -o "$bundle" "$o" -undefined dynamic_lookup -macosx_version_min 10.14 -lSystem
    echo "require '$bundle';" >> "$runfile"
done

ruby="/Users/$(whoami)/.rbenv/shims/ruby"
$ruby "$runfile"
